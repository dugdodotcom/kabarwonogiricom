extends auth

block auth
  form.signup.form-horizontal(action="/users", method="post")
    .control-group
      label.control-label(for='name') Full name
      .controls
        input#name.form-control(type='text', name="name", placeholder='Full name', value=user.name,required)

    .control-group
      label.control-label(for='email') Email
      .controls
        input#email.form-control(type='text', name="email", placeholder='Email', value=user.email,required)
        
    .control-group
      label.control-label(for='mobile') Nomer Handphone
      .controls
        input#mobile.form-control(type='tel', name="mobile", placeholder='Nomer Handphone', value=user.mobile,required)

    .control-group
      label.control-label(for='username') Username
      .controls
        input#username.form-control(type='text', name="username", placeholder='Username', value=user.username,required)

    .control-group
      label.control-label(for='password') Password
      .controls
        input#password.form-control(type='password', name="password", placeholder='Password',required)

    .form-actions
      button.btn.btn-primary(type='submit') Sign up
      &nbsp;
      | or&nbsp;
      a.show-login(href="/signin") login
